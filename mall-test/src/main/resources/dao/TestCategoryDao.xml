<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzy.mall.test.dao.TestCategoryDao">
    <resultMap id="TestCategoryBaseMap" type="com.zzy.mall.test.model.TestCategory">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="name" property="name"/>
        <result column="sort" property="sort" />
    </resultMap>


    <resultMap id="TestCategoryExtMap2" type="com.zzy.mall.test.domain.TestCategoryExt" extends="TestCategoryBaseMap">
        <collection property="resourceList" columnPrefix="resource_" ofType="com.zzy.mall.test.model.TestResource" >
<!--            <id property="id" column="id"/>
            <result property="createTime" column="create_time"/>
            <result property="categoryId" column="category_id"/>
            <result property="description" column="description" />
            <result property="name" column="name"/>
            <result property="url" column="url" />-->
        </collection>
    </resultMap>

    <resultMap id="TestCategoryExtMap" type="com.zzy.mall.test.domain.TestCategoryExt" extends="TestCategoryBaseMap">
        <collection property="resourceList" columnPrefix="resource_"  resultMap="com.zzy.mall.test.dao.TestResourceDao.TestResourceMap" >
        </collection>
    </resultMap>
    <select id="selectByCategoryId" resultMap="TestCategoryExtMap">
        select
            urc.id,
            urc.create_time,
            urc.name,
            urc.sort,
            ur.id resource_id,
            ur.create_time resource_create_time,
            ur.name resource_name,
            ur.category_id resource_category_id,
            ur.description resource_description,
            ur.url resource_url
        from ums_resource_category urc
        left join ums_resource ur
        on urc.id = ur.category_id
        where urc.id = #{categoryId}
    </select>

</mapper>